
@model WebApplication8.Models.SubNameViewModel
@{
    Layout = null;
}
@if (Model != null)
{
    <select id="s2" name="sel_2" asp-items="Model.Sel2_na" disabled="disabled">
        <option selected>考试主管部门</option>
    </select>

}

else
{
    <select id="s2" name="sel_2" disabled="disabled" >
        <option selected>考试主管部门</option>
    </select>
}


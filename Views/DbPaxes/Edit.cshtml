@model WebApplication8.Models.DbPax
@{
    Layout = "_Layout_employee";
}
@{
    ViewData["Title"] = "Edit";
    string answer = null;
    if (ViewData["ans"] != null)
    {
        var ans = ViewData["ans"];
        answer = ans.ToString();

    }
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="#">Home</a>
                </li>

                <li>
                    <a href="#">模拟答题</a>
                </li>
               
                <li class="active">单选</li>

            </ul><!-- /.breadcrumb -->

         
        </div>


    </div><!-- /.row -->
</div><!-- /.page-content -->



<h4></h4>
<hr />
<form asp-controller="DbPaxes" asp-action="Edit">
    <p>
        题目反馈: <input type="text" name="SearchString">
        <input type="submit" value="反馈" />
    </p>
</form>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaxId" />
            <table>
                <tr>

                    <td width="80px" valign="top">（单选）@Html.DisplayFor(modelItem => Model.Pax1_ID) .</td>
                    <td>@Html.DisplayFor(modelItem => modelItem.Qu.Question)</td>
                </tr>
                @{
                    if (answer == null)
                    {
                        <tr>

                            <td style="text-align:center"><input type="radio" id="ra_1" Name="Option" value="A" /></td>
                            <td>A. @Html.DisplayFor(modelItem => Model.Qu.OptionA)</td>
                        </tr>
                        <tr>

                            <td style="text-align:center"><input type="radio" id="ra_2" Name="Option" value="B" /></td>
                            <td>B. @Html.DisplayFor(modelItem => Model.Qu.OptionB)</td>
                        </tr>
                        <tr>

                            <td style="text-align:center"><input type="radio" id="ra_3" Name="Option" value="C" /></td>
                            <td>C. @Html.DisplayFor(modelItem => Model.Qu.OptionC)</td>
                        </tr>
                        <tr>

                            <td style="text-align:center"><input type="radio" id="ra_4" Name="Option" value="D" /></td>
                            <td>D. @Html.DisplayFor(modelItem => Model.Qu.OptionD)</td>
                        </tr>


                    }
                    else
                    {
                        if (answer == "A")
                        {
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_1" Name="Option" value="A" checked="checked" /></td>
                                <td>A. @Html.DisplayFor(modelItem => Model.Qu.OptionA)</td>
                            </tr>
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_2" Name="Option" value="B" /></td>
                                <td>B. @Html.DisplayFor(modelItem => Model.Qu.OptionB)</td>
                            </tr>
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_3" Name="Option" value="C" /></td>
                                <td>C. @Html.DisplayFor(modelItem => Model.Qu.OptionC)</td>
                            </tr>
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_4" Name="Option" value="D" /></td>
                                <td>D. @Html.DisplayFor(modelItem => Model.Qu.OptionD)</td>
                            </tr>

                        }
                        if (answer == "B")
                        {
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_1" Name="Option" value="A" /></td>
                                <td>A. @Html.DisplayFor(modelItem => Model.Qu.OptionA)</td>
                            </tr>
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_2" Name="Option" value="B" checked="checked" /></td>
                                <td>B. @Html.DisplayFor(modelItem => Model.Qu.OptionB)</td>
                            </tr>
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_3" Name="Option" value="C" /></td>
                                <td>C. @Html.DisplayFor(modelItem => Model.Qu.OptionC)</td>
                            </tr>
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_4" Name="Option" value="D" /></td>
                                <td>D. @Html.DisplayFor(modelItem => Model.Qu.OptionD)</td>
                            </tr>

                        }
                        if (answer == "C")
                        {
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_1" Name="Option" value="A" /></td>
                                <td>A. @Html.DisplayFor(modelItem => Model.Qu.OptionA)</td>
                            </tr>
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_2" Name="Option" value="B" /></td>
                                <td>B. @Html.DisplayFor(modelItem => Model.Qu.OptionB)</td>
                            </tr>
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_3" Name="Option" value="C" checked="checked" /></td>
                                <td>C. @Html.DisplayFor(modelItem => Model.Qu.OptionC)</td>
                            </tr>
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_4" Name="Option" value="D" /></td>
                                <td>D. @Html.DisplayFor(modelItem => Model.Qu.OptionD)</td>
                            </tr>

                        }
                        if (answer == "D")
                        {
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_1" Name="Option" value="A" /></td>
                                <td>A. @Html.DisplayFor(modelItem => Model.Qu.OptionA)</td>
                            </tr>
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_2" Name="Option" value="B" /></td>
                                <td>B. @Html.DisplayFor(modelItem => Model.Qu.OptionB)</td>
                            </tr>
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_3" Name="Option" value="C" /></td>
                                <td>C. @Html.DisplayFor(modelItem => Model.Qu.OptionC)</td>
                            </tr>
                            <tr>

                                <td style="text-align:center"><input type="radio" id="ra_4" Name="Option" value="D" checked="checked" /></td>
                                <td>D. @Html.DisplayFor(modelItem => Model.Qu.OptionD)</td>
                            </tr>

                        }

                    }
                }

            </table>
            <div class="form-group">
                <input type="submit" value="上一题" class="btn btn-default" name="edit" />
                <input type="submit" value="下一题" class="btn btn-default" name="edit" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details">返回题目列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>

@model IEnumerable<WebApplication8.Models.TestAn>
@{
    Layout = "_Layout_employee";
}


        <div>
            <div>
                <!-- section title -->
                <h2 class="heading-agileinfo">错题<span>信息</span></h2>
                <!-- //section title -->
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="pt-4 pb-3"></h5>
                        @foreach (var item in Model)
                        {<ul class="list-group">
                                <li class="list-group-item" style="width:800px;background-color:aliceblue;color:black">
                                    ( @Html.DisplayFor(modelItem => item.Qu.Type) )
                                    @Html.DisplayFor(modelItem => item.TestaId) .
                                    @Html.DisplayFor(modelItem => item.Qu.Question) ( )
                                </li>

                                <li class="list-group-item" style="width:800px">A. @Html.DisplayFor(modelItem => item.Qu.OptionA)</li>
                                <li class="list-group-item" style="width:800px">B. @Html.DisplayFor(modelItem => item.Qu.OptionB)</li>
                                <li class="list-group-item" style="width:800px">C. @Html.DisplayFor(modelItem => item.Qu.OptionC)</li>
                                <li class="list-group-item" style="width:800px">D. @Html.DisplayFor(modelItem => item.Qu.OptionD) </li>
                                <li class="list-group-item" style="width:800px;color:red">

                                    正确答案： @Html.DisplayFor(modelItem => item.Qu.RightAnswer)
                                    您的答案： @Html.DisplayFor(modelItem => item.RW)

                                </li>
                            </ul>}
                    </div>
                </div>
            </div>
        </div>


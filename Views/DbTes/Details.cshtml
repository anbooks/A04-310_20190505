@model WebApplication8.Models.DbTe
@{
    Layout = "_Layout3";
}
@{
    ViewData["Title"] = "Details";
}

<h2>单选</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaxId" />
            <table>
                <tr>

                    <td>（单选）@Html.DisplayFor(modelItem => Model.Pax.Pax1_ID) .</td>
                    <td>@Html.DisplayFor(modelItem => modelItem.Pax.Qu.Question)</td>
                </tr>
                <tr>

                    <td style="text-align:center"><input type="radio" id="ra_1" Name="Option" value="A" /></td>
                    <td>A. @Html.DisplayFor(modelItem => Model.Pax.Qu.OptionA)</td>
                </tr>
                <tr>

                    <td style="text-align:center"><input type="radio" id="ra_2" Name="Option" value="B" /></td>
                    <td>B. @Html.DisplayFor(modelItem => Model.Pax.Qu.OptionB)</td>
                </tr>
                <tr>

                    <td style="text-align:center"><input type="radio" id="ra_3" Name="Option" value="C" /></td>
                    <td>C. @Html.DisplayFor(modelItem => Model.Pax.Qu.OptionC)</td>
                </tr>
                <tr>

                    <td style="text-align:center"><input type="radio" id="ra_4" Name="Option" value="D" /></td>
                    <td>D. @Html.DisplayFor(modelItem => Model.Pax.Qu.OptionD)</td>
                </tr>
            </table>
            <div class="form-group">
                <input type="submit" value="上一题" class="btn btn-default" name="edit" />
                <input type="submit" value="下一题" class="btn btn-default" name="edit" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details">返回题目列表</a>
</div>

